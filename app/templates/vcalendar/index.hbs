{{#navbar-fixed-top}}
	{{!--#if hasCalendarSelected--}}
	<div class="navbar-nav">
		{{#link-to 'vcalendar.index' classNames="navbar-text"}}{{calendarName}}{{/link-to}}
		{{#link-to 'vcalendar.new' classNames="btn btn-default btn-sm navbar-btn"}}{{t application.navbar.new}}{{/link-to}}
	</div>
	{{!--/if--}}
{{/navbar-fixed-top}}

<div class="container-fluid">
	<div clas="row">
			<div class="col-xs-2 well">
			<div class="row">
				<div class="col-xs-12">
					<center>Tags</center>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">{{vcomponents-tags-piechart content=vcomponents_array}}</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<center>Where</center>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">{{vcomponents-locations-piechart content=vcomponents_array}}</div>
			</div>
			{{!--
			<div class="row">
				<div class="col-xs-12">
					<center>With who</center>
				</div>
			</div>
			--}}
		</div>
		<div class="col-xs-10">
			<div class="btn-group btn-group-justified">
				<div class="btn-group">
					<button type="button" {{bind-attr class=":btn :btn-default onAgendaView:active"}} {{action "showAgenda"}}>Agenda</button>
				</div>
				<div class="btn-group">
					<button type="button" {{bind-attr class=":btn :btn-default onToConfirmView:active"}} {{action "showToConfirm"}}>Confirmer <span class="badge" style="background-color: red;">{{numToConfirm}}</span></button>
				</div>
				<div class="btn-group">
					<button type="button" {{bind-attr class=":btn :btn-default onHistoryView:active"}} {{action "showHistory"}}>History Timeline</button>
				</div>
				<div class="btn-group">
					<button type="button" {{bind-attr class=":btn :btn-default onWindRoseView:active"}} {{action "showWindRose"}}>Actual WindRose{{!-- & Gauge--}}</button>
				</div>
				<div class="btn-group">
					<button type="button" {{bind-attr class=":btn :btn-default onDiaryView:active"}} {{action "showDiary"}}>Diary</button>
				</div>
				<div class="btn-group">
					<button type="button" {{bind-attr class=":btn :btn-default onWizardView:active"}} {{action "showWizard"}}>Challenger{{--Wizard--}}</button>
				</div>
			</div>
		</div>
		<div class="col-xs-10">
			<hr />
		</div>
		<div class="col-xs-10">
			{{vcalendar-agenda show=onAgendaView vevents=events vtodos=todos vjournals=journals}}

			{{vevents-toconfirm show=onToConfirmView vevents=events}}

			{{vcalendar-history show=onHistoryView vevents=events vtodos=todos vjournals=journals tags=tags}}

			{{vcalendar-windrose show=onWindRoseView vevents=events vtodos=todos}}

			{{vcalendar-diary show=onDiaryView components=vcomponents}}

			{{vcalendar-wizard show=onWizardView vtodos=todos tags=tags}}
		</div>
		<div class="clearfix"></div>
	</div>
</div>