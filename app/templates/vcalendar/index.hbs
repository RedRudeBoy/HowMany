<div clas="row">
		<div class="col-xs-2 well">
		<div class="row">
			<div class="col-xs-12">
				<center>Tags</center>
			</div>
		</div>
		<div class="row">
		{{!--#each tag in tags}}
			<div class="col-xs-6 pull-left" style="margin-top: 5px;">
				<button type="button" class="btn btn-block">
					{{#if icon}}<i class="fa fa-{{unbound icon}}"></i> <br />{{/if}}
					{{{unbound name}}}
				</button>
			</div>
		{{/each--}}
		{{#each tag in tags}}
			{{#unless tag.parent}}
				<div class="row">
					<div class="col-xs-12">
						<button type="button" class="btn btn-block" data-toggle="collapse" data-target="#HowManysBigIcons{{unbound tag.name}}">{{{unbound tag.name}}}</button>
						<div class="row collapse" id="HowManysBigIcons{{unbound name}}">{{!--class "in" for open by default--}}
							{{#each tag.children}}
								<div class="col-xs-6 pull-left" style="margin-top: 5px;">
									<button type="button" class="btn btn-block">
										{{#if icon}}<i class="fa fa-{{unbound icon}}"></i> <br />{{/if}}
										{{{unbound name}}}
									</button>
								</div>
							{{/each}}
						</div>
					</div>
				</div>
				<br />
			{{/unless}}
		{{/each}}
		</div>
		<div class="row">
			<div class="col-xs-12">
				<center>Where</center>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<center>With who</center>
			</div>
		</div>
	</div>
	<div class="col-xs-10">
		<div class="btn-group btn-group-justified">
			<div class="btn-group">
				<button type="button" {{bind-attr class=":btn :btn-default onAgendaView:active"}} {{action "showAgenda"}}>Agenda</button>
			</div>
			<div class="btn-group">
				<button type="button" {{bind-attr class=":btn :btn-default onToConfirmView:active"}} {{action "showToConfirm"}}>To Confirm</button>
			</div>
			<div class="btn-group">
				<button type="button" {{bind-attr class=":btn :btn-default onHistoryView:active"}} {{action "showHistory"}}>History Timeline</button>
			</div>
			<div class="btn-group">
				<button type="button" {{bind-attr class=":btn :btn-default onWindRoseView:active"}} {{action "showWindRose"}}>WindRose{{!-- & Gauge--}}</button>
			</div>
			<div class="btn-group">
				<button type="button" {{bind-attr class=":btn :btn-default onWizardView:active"}} {{action "showWizard"}}>Wizard</button>
			</div>
		</div>
	</div>
	<div class="col-xs-10">
		<hr />
	</div>
	<div class="col-xs-10">
		{{vcalendar-agenda show=onAgendaView vevents=events vtodos=todos vjournals=journals}}
		
		{{vevents-toconfirm show=onToConfirmView vevents=events}}
		
		{{vcalendar-history show=onHistoryView vevents=events}}
		
		{{vcalendar-windrose show=onWindRoseView vevents=events vtodos=todos}}
		
		{{vcalendar-wizard show=onWizardView vtodos=todos tags=tags}}
	</div>
	<div class="clearfix"></div>
</div>